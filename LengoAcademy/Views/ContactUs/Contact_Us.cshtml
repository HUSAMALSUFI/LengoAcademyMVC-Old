@using DareAcademy_DataAccess.Domain
@using LengoAcademy.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model VmContact
@section Head {
    <style type="text/css">
        .maan-contact-area {
            padding-bottom: 7.5rem;
            padding-top: 6.5rem !important;
        }

        .row {
            --bs-gutter-x: 5.5rem !important;
        }
    </style>
}
@section Body{
    <main id="main-body-wrapper">
        <!-- Banner Area -->
        <section class="maan-breadcrumb-area overflow-hidden">
            <div class="container-fluid g-0">
                <div class="row">
                    <div class="col-12">
                        <div class="breadcrumb-bg breadcrumb-bg1" data-background="assets/img/banner/banner3.svg">
                            <div class="row">
                                <div class="col-12">
                                    <div class="maan-breadcrumb-content text-center">
                                        <h2>Contact Us</h2>
                                        <nav aria-label="breadcrumb">
                                            <ol class="breadcrumb justify-content-center">
                                                <li class="breadcrumb-item">
                                                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                                </li>
                                                <li class="breadcrumb-item active" aria-current="page">
                                                    Contact Us
                                                </li>
                                            </ol>
                                        </nav>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Banner Area -->
        <!-- Contact Area -->
        <section class="maan-contact-area" *ngFor="let v of liContact">
            <div class="container">
                <div class="maan-contact-wrapper">
                    <div class="row">
                        <div class="col-lg-6">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3383.962007036427!2d35.892769615162194!3d31.989045381216982!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x5445ad5534ec4076!2zMzHCsDU5JzIwLjYiTiAzNcKwNTMnNDEuOSJF!5e0!3m2!1sen!2sjo!4v1673561519516!5m2!1sen!2sjo"
                                    width="600" height="750" style="border:0;" allowfullscreen="" loading="lazy"
                                    referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                        <div class="col-lg-6">
                            <div class="maan-contact-form">
                                <h3>Get In Touch With Us</h3>
                                @* <p>
                                    I must explain to you how all this mistaken idea of
                                    denouncing pleasure &amp; praising pain was born and I will give
                                    you a complete account of the system, and expound the actual
                                    teachings.
                                    </p>*@
                                <ul>
                                    @foreach (ContactDTO item in Model.Contact)
                                    {
                                        <li>
                                            <strong>Address:</strong>
                                            <span>@item.Address</span>
                                        </li>
                                        <li>
                                            <strong>Phone:</strong>
                                            <span>@item.Phone</span>
                                        </li>
                                        <li>
                                            <strong>Email:</strong>
                                            <span>@item.Email</span>
                                        </li>
                                    }
                                </ul>
                                <form class="maan-form" action="#">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="maan-input-group">
                                                <input type="text" class="form-control" placeholder="Full Name" />
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="maan-input-group">
                                                <input type="email" class="form-control" placeholder="Email Address" />
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="maan-input-group">
                                                <textarea name="message" id="message" class="form-control" cols="30" rows="5"
                                                          placeholder="Write your message here"></textarea>
                                            </div>
                                        </div>
                                        <div class="maan-contact-btn">
                                            <button type="submit" class="btn btn-red btn-xl">
                                                Send Message
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Contact Area -->
        <br />
        <!-- CTA Two Section -->
        <section class="maan-cta-two-area">
            <div class="container">
                <div class="row">
                    <div class="col-12" data-cue="slideInUp">
                        <div class="maan-cta-wrapper" data-background="assets/img/bg/cta-bg2.svg">
                            <div class="cta-content">
                                <h2>Are you interested in sharing your course?</h2>
                                <a asp-area="" asp-controller="RegisterEnroll" asp-action="Enroll" class="btn btn-red btn-lg">Join Now</a>
                            </div>
                            <img src="~/assets/img/svg/star-1.svg" alt="SVG" class="shape">
                            <img src="~/assets/img/svg/star-2.svg" alt="SVG" class="shape2">
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- CTA Two Section -->
    </main>

}
